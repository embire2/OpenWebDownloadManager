<Window x:Class="OpenWebDM.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="About OpenWeb Download Manager" 
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>
        
        <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        
        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style x:Key="LinkTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="TextDecorations" Value="Underline"/>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Logo -->
        <Border Grid.Row="0" Background="Linear-gradient(135deg, #667eea 0%, #764ba2 100%)" Padding="20">
            <StackPanel>
                <Image Source="/Resources/openwebdm.png" Width="80" Height="80" Margin="0,10"/>
                <TextBlock Text="OpenWeb Download Manager" Style="{StaticResource TitleTextStyle}" Foreground="White"/>
                <TextBlock Text="Version 1.0.0" Style="{StaticResource SubtitleTextStyle}" Foreground="#E0E0E0"/>
                <TextBlock Text="Advanced Download Manager for Windows" Style="{StaticResource SubtitleTextStyle}" Foreground="#E0E0E0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="30" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Description -->
                <TextBlock Style="{StaticResource InfoTextStyle}" Margin="0,0,0,15">
                    OpenWeb Download Manager is a powerful, feature-rich download manager that accelerates downloads 
                    with multi-connection technology, provides seamless browser integration, and supports advanced 
                    media downloads from popular streaming platforms.
                </TextBlock>

                <!-- Features -->
                <TextBlock Text="Key Features:" FontWeight="Bold" Style="{StaticResource InfoTextStyle}" Margin="0,15,0,10"/>
                <TextBlock Style="{StaticResource InfoTextStyle}">
                    • Multi-connection downloads up to 10x faster<LineBreak/>
                    • Universal browser integration (Chrome, Firefox, Edge)<LineBreak/>
                    • Video/audio downloads from 1000+ sites<LineBreak/>
                    • Smart file categorization and organization<LineBreak/>
                    • Advanced download scheduling<LineBreak/>
                    • Resume interrupted downloads<LineBreak/>
                    • Modern, intuitive interface
                </TextBlock>

                <!-- System Requirements -->
                <TextBlock Text="System Requirements:" FontWeight="Bold" Style="{StaticResource InfoTextStyle}" Margin="0,15,0,10"/>
                <TextBlock Style="{StaticResource InfoTextStyle}">
                    • Windows 10 or later (64-bit)<LineBreak/>
                    • .NET 8.0 Runtime<LineBreak/>
                    • 50 MB free disk space<LineBreak/>
                    • Administrator privileges (for browser integration)
                </TextBlock>

                <!-- Company Info -->
                <Border Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="1" 
                        CornerRadius="8" Padding="20" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="Developed by OpenWeb" FontWeight="Bold" 
                                   Style="{StaticResource InfoTextStyle}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Website:" FontWeight="SemiBold" Style="{StaticResource InfoTextStyle}"/>
                        <TextBlock Text="https://openweb.co.za" Style="{StaticResource LinkTextStyle}" 
                                   MouseLeftButtonUp="Website_Click" Tag="https://openweb.co.za" Margin="0,2,0,10"/>
                        
                        <TextBlock Text="Support:" FontWeight="SemiBold" Style="{StaticResource InfoTextStyle}"/>
                        <TextBlock Text="support@openweb.co.za" Style="{StaticResource LinkTextStyle}" 
                                   MouseLeftButtonUp="Email_Click" Tag="mailto:support@openweb.co.za" Margin="0,2,0,10"/>
                        
                        <TextBlock Text="Source Code:" FontWeight="SemiBold" Style="{StaticResource InfoTextStyle}"/>
                        <TextBlock Text="GitHub Repository" Style="{StaticResource LinkTextStyle}" 
                                   MouseLeftButtonUp="GitHub_Click" Tag="https://github.com/openwebdm/openwebdm" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Legal Notice -->
                <TextBlock Style="{StaticResource InfoTextStyle}" Margin="0,20,0,0" TextAlignment="Center">
                    <Run Text="Copyright © 2025 OpenWeb.co.za. All rights reserved."/><LineBreak/>
                    <Run Text="Licensed under the MIT License"/><LineBreak/>
                    <Run Text="This software is provided 'as is' without warranty of any kind."/>
                </TextBlock>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Check for Updates" Width="120" Height="32" Margin="0,0,10,0"
                        Click="CheckUpdates_Click" Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="View Changelog" Width="120" Height="32" Margin="0,0,10,0"
                        Click="ViewChangelog_Click" Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="Close" Width="80" Height="32" Click="Close_Click" 
                        Style="{StaticResource ActionButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>