<Window x:Class="OpenWebDM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:OpenWebDM.ViewModels"
        Title="OpenWeb Download Manager" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/openwebdm.png">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <MenuItem Header="_File">
                <MenuItem Header="_New Download..." Click="NewDownload_Click"/>
                <MenuItem Header="_Import URLs..." Click="ImportUrls_Click"/>
                <Separator/>
                <MenuItem Header="_Settings..." Click="Settings_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Downloads">
                <MenuItem Header="_Start All" Click="StartAll_Click"/>
                <MenuItem Header="_Pause All" Click="PauseAll_Click"/>
                <MenuItem Header="_Clear Completed" Command="{Binding ClearCompletedCommand}"/>
                <Separator/>
                <MenuItem Header="_Categories..." Click="Categories_Click"/>
                <MenuItem Header="_Scheduler..." Click="Scheduler_Click"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Browser Integration" Click="BrowserIntegration_Click"/>
                <MenuItem Header="_Site Explorer" Click="SiteExplorer_Click"/>
                <MenuItem Header="_Batch Download" Click="BatchDownload_Click"/>
                <Separator/>
                <MenuItem Header="_Options..." Click="Options_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_User Manual" Click="UserManual_Click"/>
                <MenuItem Header="_Keyboard Shortcuts" Click="KeyboardShortcuts_Click"/>
                <Separator/>
                <MenuItem Header="_Check for Updates..." Click="CheckUpdates_Click"/>
                <MenuItem Header="_About OpenWeb DM" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBar Grid.Row="1" Style="{StaticResource ToolbarStyle}">
            <Button Content="➕ Add" ToolTip="Add New Download" Click="AddDownload_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Content="▶️ Start" ToolTip="Start Download" Command="{Binding ResumeDownloadCommand}" 
                    CommandParameter="{Binding ElementName=DownloadsList, Path=SelectedItem}" Style="{StaticResource ActionButtonStyle}"/>
            <Button Content="⏸️ Pause" ToolTip="Pause Download" Command="{Binding PauseDownloadCommand}" 
                    CommandParameter="{Binding ElementName=DownloadsList, Path=SelectedItem}" Style="{StaticResource PauseButtonStyle}"/>
            <Button Content="⏹️ Stop" ToolTip="Cancel Download" Command="{Binding CancelDownloadCommand}" 
                    CommandParameter="{Binding ElementName=DownloadsList, Path=SelectedItem}" Style="{StaticResource StopButtonStyle}"/>
            <Separator/>
            <Button Content="📁 Open" ToolTip="Open File" Command="{Binding OpenFileCommand}" 
                    CommandParameter="{Binding ElementName=DownloadsList, Path=SelectedItem}" Style="{StaticResource ActionButtonStyle}"/>
            <Button Content="📂 Folder" ToolTip="Open Folder" Command="{Binding OpenFolderCommand}" 
                    CommandParameter="{Binding ElementName=DownloadsList, Path=SelectedItem}" Style="{StaticResource ActionButtonStyle}"/>
            <Separator/>
            <Button Content="🗑️ Clear" ToolTip="Clear Completed" Command="{Binding ClearCompletedCommand}" Style="{StaticResource ActionButtonStyle}"/>
        </ToolBar>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Add Download Section -->
            <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="URL:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding DownloadUrl, UpdateSourceTrigger=PropertyChanged}" 
                             Height="32" VerticalContentAlignment="Center" Padding="10,0" Margin="0,0,10,0"/>
                    <Button Grid.Row="0" Grid.Column="2" Content="📋 Paste" Width="70" Height="32" Margin="0,0,10,0" Click="PasteUrl_Click"/>
                    <Button Grid.Row="0" Grid.Column="3" Content="⬇️ Download" Width="90" Height="32" 
                            Command="{Binding StartDownloadCommand}" Style="{StaticResource ActionButtonStyle}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Save to:" VerticalAlignment="Center" Margin="0,10,10,0" FontWeight="SemiBold"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SavePath}" Height="32" 
                             VerticalContentAlignment="Center" Padding="10,0" Margin="0,10,10,0" IsReadOnly="True"/>
                    <Button Grid.Row="1" Grid.Column="2" Content="📁 Browse" Width="70" Height="32" Margin="0,10,10,0" 
                            Command="{Binding BrowseFolderCommand}"/>
                </Grid>
            </Border>

            <!-- Downloads List -->
            <ListView Grid.Row="1" Name="DownloadsList" ItemsSource="{Binding Downloads}" 
                      ItemContainerStyle="{StaticResource DownloadItemStyle}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="File Name" Width="300">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="{Binding FileName}" Style="{StaticResource FileNameTextStyle}"/>
                                        <Border Style="{StaticResource CategoryBadgeStyle}" Margin="0,2,0,0">
                                            <TextBlock Text="{Binding Category}" FontSize="10" Foreground="#4CAF50"/>
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Progress" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Grid>
                                            <ProgressBar Value="{Binding Progress}" Style="{StaticResource DownloadProgressBarStyle}"/>
                                            <TextBlock Text="{Binding Progress, StringFormat={}{0:F1}%}" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                       FontSize="10" Foreground="White"/>
                                        </Grid>
                                        <TextBlock Text="{Binding FormattedDownloadedSize}" FontSize="11" 
                                                   Foreground="#666" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Size" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FormattedTotalSize}" Style="{StaticResource SpeedTextStyle}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Speed" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Speed}" Style="{StaticResource SpeedTextStyle}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="ETA" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding EstimatedTime, StringFormat={}{0:hh\\:mm\\:ss}}" 
                                               Style="{StaticResource SpeedTextStyle}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Status" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Status}" Style="{StaticResource SpeedTextStyle}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Actions" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="⏸️" Width="30" Height="24" Margin="2" ToolTip="Pause"
                                                Command="{Binding DataContext.PauseDownloadCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}"/>
                                        <Button Content="▶️" Width="30" Height="24" Margin="2" ToolTip="Resume"
                                                Command="{Binding DataContext.ResumeDownloadCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}"/>
                                        <Button Content="⏹️" Width="30" Height="24" Margin="2" ToolTip="Cancel"
                                                Command="{Binding DataContext.CancelDownloadCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}"/>
                                        <Button Content="📂" Width="30" Height="24" Margin="2" ToolTip="Open Folder"
                                                Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Style="{StaticResource StatusBarStyle}">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Active:" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding ActiveDownloads}" Margin="0,0,15,0" FontWeight="Bold"/>
                    <TextBlock Text="Speed:" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding TotalSpeed}" FontWeight="Bold"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>