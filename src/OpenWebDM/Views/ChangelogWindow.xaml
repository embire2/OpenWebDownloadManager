<Window x:Class="OpenWebDM.Views.ChangelogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Changelog - OpenWeb Download Manager" 
        Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Window.Resources>
        <Style x:Key="VersionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>
        
        <Style x:Key="DateStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
        
        <Style x:Key="ChangeItemStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="15,2,0,2"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style x:Key="NewBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="NewBadgeTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📋" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Changelog" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Text="What's new in OpenWeb Download Manager" FontSize="12" 
                           Foreground="#666666" VerticalAlignment="Bottom" Margin="15,0,0,2"/>
            </StackPanel>
        </Border>

        <!-- Changelog Content -->
        <ScrollViewer Grid.Row="1" Padding="30" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Version 1.0.0 -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Version 1.0.0" Style="{StaticResource VersionHeaderStyle}"/>
                    <Border Style="{StaticResource NewBadgeStyle}">
                        <TextBlock Text="CURRENT" Style="{StaticResource NewBadgeTextStyle}"/>
                    </Border>
                </StackPanel>
                
                <TextBlock Text="Released: January 2025" Style="{StaticResource DateStyle}"/>
                
                <TextBlock Text="🎉 Initial Release" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • First public release of OpenWeb Download Manager
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Complete rewrite with modern .NET 8.0 and WPF
                </TextBlock>

                <TextBlock Text="⚡ Core Features" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Multi-connection downloads with up to 16 simultaneous connections
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Dynamic file segmentation for maximum download speeds
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Resume interrupted downloads with automatic recovery
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Smart bandwidth allocation and speed optimization
                </TextBlock>

                <TextBlock Text="🌐 Browser Integration" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Universal browser support (Chrome, Firefox, Edge, Opera)
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Automatic download detection and interception
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Native messaging host for seamless communication
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • One-click download buttons on web pages
                </TextBlock>

                <TextBlock Text="🎵 Media Downloads" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Support for 1000+ streaming sites including YouTube, Vimeo, TikTok
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Multiple format and quality options for videos and audio
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • yt-dlp integration for comprehensive media extraction
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Batch playlist downloads with metadata preservation
                </TextBlock>

                <TextBlock Text="📁 Smart Organization" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Automatic file categorization (Videos, Music, Documents, Programs, etc.)
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Custom categories with configurable rules and save paths
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Intelligent file type detection by extension and MIME type
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Advanced search and filtering capabilities
                </TextBlock>

                <TextBlock Text="⏰ Scheduling &amp; Automation" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Advanced download scheduler with daily/weekly/monthly patterns
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Bandwidth management and time-based controls
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Queue management with drag-and-drop prioritization
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Automatic start/pause based on system conditions
                </TextBlock>

                <TextBlock Text="🎨 User Interface" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Modern, clean WPF interface with intuitive design
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Real-time progress tracking with detailed statistics
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Customizable layout and theme options
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Comprehensive context menus and keyboard shortcuts
                </TextBlock>

                <TextBlock Text="🔧 Technical Improvements" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Built on .NET 8.0 for optimal performance and security
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • MVVM architecture with dependency injection
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Comprehensive logging and error handling
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Automatic update system with forced updates
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Professional installer with registry integration
                </TextBlock>

                <TextBlock Text="🛡️ Security &amp; Privacy" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • No telemetry or data collection
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Open source transparency
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Local data storage only
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Secure download validation and verification
                </TextBlock>

                <!-- Known Issues -->
                <TextBlock Text="⚠️ Known Issues" Style="{StaticResource SectionHeaderStyle}" Margin="0,30,0,10"/>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Some antivirus software may flag the application due to download behavior
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Browser extensions require manual approval in some configurations
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Large file downloads (>4GB) may require additional system configuration
                </TextBlock>

                <!-- Future Plans -->
                <TextBlock Text="🚀 Coming Soon" Style="{StaticResource SectionHeaderStyle}" Margin="0,20,0,10"/>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • BitTorrent protocol support
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Cloud storage integration (Google Drive, Dropbox, OneDrive)
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Mobile companion app
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Advanced site-specific extractors
                </TextBlock>
                <TextBlock Style="{StaticResource ChangeItemStyle}">
                    • Plugin system for extensibility
                </TextBlock>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Check for Updates" Width="130" Height="32" Margin="0,0,10,0"
                        Click="CheckUpdates_Click" Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="Close" Width="80" Height="32" Click="Close_Click" 
                        Style="{StaticResource ActionButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>