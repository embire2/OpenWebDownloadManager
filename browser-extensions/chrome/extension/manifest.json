{
  "manifest_version": 3,
  "name": "OpenWeb Download Manager",
  "version": "1.0.0",
  "description": "Advanced download manager integration for web browsers",
  "permissions": [
    "downloads",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs",
    "contextMenus",
    "nativeMessaging",
    "notifications",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-enhanced.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "OpenWeb Download Manager"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js", "file-types.js"],
      "matches": ["<all_urls>"]
    }
  ]
}